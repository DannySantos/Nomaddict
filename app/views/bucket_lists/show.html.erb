<nav class="secondary row">
  <div class="col-sm-12">
    <h1 class="mr30 di">Bucket List</h1>

    <ul class="lisn">
      <li>
        <%= link_to "My Bucket List", current_user ? bucket_list_path(current_user.bucket_list) : new_user_session_path %>
      </li>

      <li>
        <%= link_to "Get Ideas", items_path %>
      </li> 
    </ul>
  </div>
</nav>

<div class="row">
  <div id="bucketList" class="col-sm-7">
    <%= render "bucket_list" %>
  </div>

  <div class="col-sm-5">
    <h2>Add a goal</h2>

    <%= form_for(@bucket_list.items.new, remote: true) do |f| %>
      <%= f.hidden_field :bucket_list_id, value: @bucket_list.id %>

      <div class="row">
        <div class="col-sm-9">
          <%= f.text_field :title, class: "form-control", placeholder: "What do you want to do?" %>
        </div>

        <div class="col-sm-3">
          <%= f.submit "Add", class: "form-control btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="clb"></div>
</div>